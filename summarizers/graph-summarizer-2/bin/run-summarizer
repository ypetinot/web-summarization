#!/bin/bash -x

SUMMARIZER_MAKEFILE_LOCATION=$1
SUMMARIZER_MAKEFILE_TARGET=$2
SUMMARIZER_MAKEFILE_BASE_DIRECTORY=$3
FOLD_ID=$4
CATEGORY_BASE_NAME=$5

#make -f ${SUMMARIZERS_ROOT}/graph-summarizer-2/bin/makefile.graph2 graph2-test -C ${CATEGORY_BASE_DIRECTORY} FOLD_ID=${FOLD} CATEGORY=${CATEGORY_BASE_NAME}
make -f ${SUMMARIZER_MAKEFILE_LOCATION} -C ${SUMMARIZER_MAKEFILE_BASE_DIRECTORY} ${SUMMARIZER_MAKEFILE_TARGET} FOLD_ID=${FOLD_ID} CATEGORY=${CATEGORY_BASE_NAME} 1>&2

cat ${SUMMARIZER_MAKEFILE_BASE_DIRECTORY}/${CATEGORY_BASE_NAME}.models/graph-summarizer-2/${FOLD_ID}/test.out | while read SUMMARIZER_OUTPUT_LINE; do
    echo -e "${SUMMARIZER_OUTPUT_LINE}\tgraph2";
done;
